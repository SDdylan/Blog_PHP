{% extends "layout.twig" %}

{% block content %}
<div class="container px-4 px-lg-5">
    <div class="row gx-4 gx-lg-5 justify-content-center text-center">
        <div class="col-md-10 col-lg-8 col-xl-7">
            <h2>Éditer Article</h2>
            <h3>{{ post.title }}</h3>
            <hr>
            <form id="addPostForm" method="POST">
                <div class="form-floating my-2">
                    <a href="/admin" class="btn btn-primary text-uppercase">Retour</a>
                </div>
                <div class="form-floating my-2">
                    <input class="form-control" id="title" name="title" type="text" placeholder="Titre..." value="{{ post.title }}" required/>
                    {% if errors.title is defined %}
                        <label for="title" class="col-form-label text-danger">{{ errors.title }}</label>
                    {% else %}
                        <label for="title">Titre</label>
                    {% endif %}
                </div>
                <div class="form-floating my-2">
                    <input class="form-control" id="chapo" name="chapo" type="text" placeholder="Chapo..." value="{{ post.chapo }}" required/>
                    {% if errors.chapo is defined %}
                        <label for="chapo" class="col-form-label text-danger">{{ errors.chapo }}</label>
                    {% else %}
                        <label for="chapo">Chapo</label>
                    {% endif %}
                </div>
                <div class="form-floating my-2">
                    <textarea class="form-control" style="height: 12rem" id="content" name="content" type="text" placeholder="Content..." required>{{ post.content }}</textarea>
                    {% if errors.content is defined %}
                        <label for="content" class="col-form-label text-danger">{{ errors.content }}</label>
                    {% else %}
                        <label for="content">Chapo</label>
                    {% endif %}
                </div>
                <input type="hidden" id="post-modify-form" name="post-modify-form" value="1">
                <br/>
                <!-- Button vers Modal -->
                <button class="btn btn-primary text-uppercase" id="submitButton" data-bs-toggle="modal" data-bs-target="#modalPost{{ post.id }}" type="button">Valider</button>
                <!-- Modal -->
                <div class="modal fade" id="modalPost{{ post.id }}" tabindex="-1" aria-labelledby="modalLabel{{ post.id }}" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="modalLabel{{ post.id }}">Modification d'Article</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                <p>Êtes-vous sur de vouloir modifier l'article <strong>{{ post.title }}</strong>" ?</p>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Non</button>
                                <button type="submit" class="btn btn-primary">Oui</button>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
{% endblock %}

